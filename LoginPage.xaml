<Page x:Class="BasicVendorInventoryPlatform.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login">
    <Grid Background="#F0F0F0">
        <Border Background="White" CornerRadius="10" Margin="50" Padding="70">
            <StackPanel>
                <TextBlock Text="Vendor Inventory Platform" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="Username:" Margin="0,10,0,5"/>
                <TextBox x:Name="UsernameTextBox" Padding="5"/>
                <TextBlock Text="Password:" Margin="0,10,0,5"/>
                <PasswordBox x:Name="PasswordBox" Padding="5"/>
                <Button Content="Login" Click="Login_Click" Margin="0,20,0,0" Padding="10,5" Background="#007BFF" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>